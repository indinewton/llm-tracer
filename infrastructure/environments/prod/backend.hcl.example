# Backend configuration for Terraform state
#
# This file is auto-generated by: just generate-backend-prod
# Values are pulled from bootstrap terraform outputs.
#
# Usage (Recommended):
#   cd infrastructure
#   just init-prod    # Generates backend.hcl and runs terraform init
#
# Usage (Manual):
#   cp backend.hcl.example backend.hcl
#   # Edit backend.hcl with values from: cd ../bootstrap && terraform output
#   terraform init -backend-config=backend.hcl

bucket         = "llm-tracer-YOUR_AWS_ACCOUNT_ID-terraform-state"
key            = "prod/terraform.tfstate"
region         = "eu-central-1"
dynamodb_table = "llm-tracer-YOUR_AWS_ACCOUNT_ID-terraform-locks"
encrypt        = true
