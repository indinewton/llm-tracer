
# ============================================================================
# LLM Tracer - Environment Configuration
# ============================================================================

# Storage Backend
STORAGE_TYPE=dynamodb

# ============================================================================
# DynamoDB Configuration
# ============================================================================

DYNAMODB_TRACES_TABLE=llm-tracer-dev-traces
DYNAMODB_SPANS_TABLE=llm-tracer-dev-spans

# DynamoDB Endpoint (leave empty for AWS, set for local testing)
# DYNAMODB_ENDPOINT_URL=http://localhost:8000

# ============================================================================
# AWS Configuration
# ============================================================================

AWS_REGION=eu-central-1
# AWS_ACCESS_KEY_ID=  # Use IAM role in production
# AWS_SECRET_ACCESS_KEY=  # Use IAM role in production

# ============================================================================
# Server Configuration
# ============================================================================

HOST=0.0.0.0
PORT=8001
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:*,http://127.0.0.1:*

# ============================================================================
# Server-side Authentication (used by the LLM Tracer service)
# ============================================================================

# Require API key authentication
API_KEY_REQUIRED=true

# Valid API keys (comma-separated, format: project-{project_id})
# For production, use long random keys: project-$(openssl rand -hex 16)
API_KEYS=project-myproject,project-another

# Default project key when auth is disabled
DEFAULT_PROJECT_KEY=project-public

# ============================================================================
# Client-side Configuration (used by TracerClient / test scripts)
# ============================================================================

# API key to authenticate with the server (must be one of API_KEYS above)
TRACER_API_KEY=project-myproject

# Tracer service URL (use Lambda URL for AWS deployment)
TRACER_URL=http://localhost:8001

# Project identifier (derived from API key if not set)
TRACER_PROJECT_ID=dev

# Enable/disable tracing (set to "false" to disable)
TRACING_ENABLED=true

# ============================================================================
# Rate Limiting
# ============================================================================

RATE_LIMIT_RPM=60

# ============================================================================
# Environment
# ============================================================================

ENVIRONMENT=dev
IMAGE_TAG=latest

# ============================================================================
# Local Testing with DynamoDB Local
# ============================================================================

# Uncomment for local testing:
# DYNAMODB_ENDPOINT_URL=http://localhost:8000
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test